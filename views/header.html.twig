<!DOCTYPE html>
<html
	itemscope
	itemtype="http://schema.org/WebPage"
	{{ site.language_attributes }}
	{{ html_class( 'no-js no-touch' ~ ( 'front-page' == namespace ? ' size-100' ) ~ ( 'horizontal-page' in post.modules ? ' cursor-wait' ) ) }}
>

	<head>

		<meta charset="{{ site.charset }}">
		<link rel="profile" href="http://gmpg.org/xfn/11">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=5">

		{{ wp_head }}

    </head>

    <body class="{{ body_class }} relative fw-normal ff-body {{ post.body_classes ? ( ' ' ~ post.body_classes | join( ' ' ) ) }}">

