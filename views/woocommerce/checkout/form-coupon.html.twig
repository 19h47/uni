{#
 # Form coupon
 #}
{% if coupons_enabled %}

	<div class="{{ classes ? classes | join( ' ' ) : '' }}">
		<div class="woocommerce-form-coupon-toggle mb-12px">
			{{- fn( 'wc_print_notice', fn( 'apply_filters', 'woocommerce_checkout_coupon_message', __( 'Have a coupon?', 'woocommerce' ) ~ ' <a href="#" class="showcoupon">' ~ __( 'Click here to enter your code', 'woocommerce' ) ~ '</a>' ), 'notice' ) -}}
		</div>

		<form class="checkout_coupon woocommerce-form-coupon" method="post" style="display:none">
			<div class="Coupon Input transition-box-shadow d-md-flex justify-content-md-end">
				<input
					type="text"
					name="coupon_code"
					class="{{ [
						'border',
						'border-1',
						'border-gray-very-dark',
						'shadow-focus-focus',
						'transition-box-shadow',
						'outline-none-focus',
						'p-12px',
						'w-100',
						'border-radius-5px',
					 	'me-md-12px'
					] | join( ' ' ) }}"
					placeholder="{{ __( 'Coupon code', 'uni' ) }}"
					id="coupon_code"
					value=""
				/>

				{{-
					include(
						'components/button.html.twig',
						{
							button: 'submit',
							label: __( 'Apply coupon', 'uni' ),
							classes: [ 'mt-12px', 'w-100', 'w-md-auto', 'mt-md-0' ],
							attributes: {
								name: 'apply_coupon',
								value: __( 'Apply coupon', 'uni' )
							}
						}
					)
				-}}
			</div>
		</form>
	</div>

{% endif %}
