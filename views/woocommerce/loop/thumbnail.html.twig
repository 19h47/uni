{#
 # Thumbnail
 #
 # @package UNI
 #}

<a
	class="Thumbnail w-100 h-360vh h-md-100 bg-gray-very-light-01 relative block"
	href="{{ product.link }}"
	data-product-content="link"
>

	{% if is_product and product.product_colors is not empty %}
		{%- for product_color in product.product_colors -%}
			{{-
				include(
					'partials/image.html.twig',
					{
						classes: [
							'object-position-center',
							'object-fit-contain',
							'size-100',
							'absolute',
							'inset-0',
							'transition-opacity-visibility',
							'Thumbnail__image',
							'block',
							'z-1',
							product_color.current ? 'is-active'
						],
						attributes: {
							'data-color': product_color.color,
							'data-product-content': 'image'
						},
						image: product_color.thumbnail,
						size: 'size-600'
					}
				)
			-}}
			{{-
				include(
					'partials/image.html.twig',
					{
						classes: [
							'Thumbnail__overview',
							'transition-opacity-visibility',
							'absolute',
							'inset-0',
							'size-100',
							'object-position-center',
							'object-fit-cover',
							'z-2',
							'block',
							product_color.current ? 'is-active' : null
						],
						attributes: {
							'data-color': product_color.color,
							'data-product-content': 'image'
						},
						image: product_color.hover,
						size: 'size-600'
					}
				)
			-}}
		{%- else -%}
			{{-
				include(
					'partials/image.html.twig',
					{
						classes: [
							'block',
							'Thumbnail__image',
							'transition-opacity-visibility',
							'inset-md-0',
							'md-absolute',
							'size-100',
							'object-position-center',
							'object-fit-contain'
						],
						attributes: {
							'data-color': product.color,
							'data-product-content': 'image'
						},
						image: product.thumbnail,
						size: 'size-600'
					}
				)
			-}}
			{{-
				include(
					'partials/image.html.twig',
					{
						classes: [
							'block',
							'Thumbnail__overview',
							'transition-opacity-visibility',
							'absolute',
							'inset-0',
							'size-100',
							'object-position-center',
							'object-fit-cover',
							'z-2'
						],
						attributes: {
							'data-color': product.color,
							'data-product-content': 'image'
						},
						image: product.meta( 'image_hover' ),
						size: 'size-600'
					}
				)
			-}}
		{%- endfor -%}
	{% else %}
		{{-
			include(
				'partials/image.html.twig',
				{
					classes: [
						'block',
						'Thumbnail__image',
						'transition-opacity-visibility',
						'z-1',
						'is-active',
						'size-100',
						'object-position-center',
						'object-fit-contain',
					],
					image: product.thumbnail,
					attributes: {
						'data-product-content': 'image'
					},
					size: 'size-600'
				}
			)
		-}}
		{{-
			include(
				'partials/image.html.twig',
				{
					classes: [
						'block',
						'Thumbnail__overview',
						'transition-opacity-visibility',
						'absolute',
						'inset-0',
						'size-100',
						'object-position-center',
						'object-fit-cover',
						'z-2',
						'is-active'
					],
					image: product.meta( 'image_hover' ),
					attributes: {
						'data-product-content': 'image'
					},
					size: 'size-600'
				}
			)
		-}}
	{% endif %}
</a>

