{#
 # Single variation cart button
 #
 #}

{% if not upcoming %}
	<div
		id="add-to-cart-{{ id }}"
		class="woocommerce-variation-add-to-cart variations_button"
		data-module-add-to-cart
	>
		{#
		 # Hook: woocommerce_before_add_to_cart_button.
		 #}
		{% do action( 'woocommerce_before_add_to_cart_button' ) %}

		{#
		 # Hook: woocommerce_before_add_to_cart_quantity.
		 #}
		{% do action( 'woocommerce_before_add_to_cart_quantity' ) %}

		{# {{ quantity_input }} #}

		{#
		 # Hook: woocommerce_after_add_to_cart_quantity.
		 #}
		{% do action( 'woocommerce_after_add_to_cart_quantity' ) %}

		{{- include( 'components/button-add-to-cart.html.twig', { label: add_to_cart_text } ) -}}

		{#
		 # Hook: woocommerce_after_add_to_cart_button.
		 #}
		{% do action( 'woocommerce_after_add_to_cart_button' ) %}

		<input type="hidden" name="add-to-cart" value="{{ id }}" />
		<input type="hidden" name="product_id" value="{{ id }}" />
		<input type="hidden" name="variation_id" class="variation_id" value="0" />
	</div>
{% endif %}
