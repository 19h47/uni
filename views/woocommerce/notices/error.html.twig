{% if notices is iterable and notices is not empty %}

	<ul class="{{
		[
			'flex',
			'flex-column',
			'gap-y-12px',
			'list-style-type-none',
			'shadow-uni',
			'p-12px',
			'border',
			'border-red-light-grayish-02',
			'rounded',
			'bg-red-light-grayish-01',
			'text-red-very-dark-01'
		] | merge( notice.classes | default( [] ) ) | join( ' ' ) | trim
	}}" role="alert">
		{% for notice in notices %}
			<li{{ fn( 'wc_get_notice_data_attr', notice ) }}>
				{{- notice.notice -}}
			</li>
		{% endfor %}
	</ul>

{% endif %}
