<ul class="Attributes">
	{% for attribute in post.attributes %}
		<li>
			<div class="Attributes__name">
				{{- attribute.name -}}
			</div>
			<div class="Attributes__options letter-spacing-50">
				{{- attribute.options | join( ' ' ) -}}
			</div>
		</li>
	{% endfor %}
</ul>
