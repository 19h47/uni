{#
 # Page Title
 #}

<div {{ id ? "id=\"#{ id }\"" }} class="{{ classes ? classes | join( ' ' ) }}">
	<{{ tag | default( 'h1' ) }} class="my-0 fs-4xl lh-none">
		{% if subtitle %}
			<span class="mb-12px d-block ff-body letter-spacing-0 text-none fs-xs d-block">
				{{- subtitle -}}
			</span>
		{% endif %}
		{{- title -}}
	</{{ tag | default( 'h1' ) }}>
</div>
