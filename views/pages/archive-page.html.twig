{% extends 'index.html.twig' %}

{% block content %}

	<div class="Horizontal-page__section mx-20px mx-md-0 mb-20px mb-md-0 position-md-fixed top-md-0 bottom-md-0 start-md-0 w-100 h-md-100" data-horizontal-page="section">
		<div class="Horizontal-page__track d-md-flex flex-md-nowrap top-md-0 bottom-md-0 start-md-0 position-md-absolute z-index-md-0 h-md-100" data-horizontal-page="track">

			<div class="d-md-flex flex-md-nowrap mt-md-20px mb-md-20px">
				{{-
					include(
						'partials/page-content.html.twig',
						{
							title: post.title,
							subtitle: post.subtitle,
							content: post.content,
							classes: [
								'w-md-1400vw',
								'h-md-100',
								'mt-100px',
								'mb-20px',
								'my-md-0',
								'min-h-100',
							]
						}
					)
				-}}

				{% if post.items %}
					{{- include( 'woocommerce/loop/loop-start.html.twig', { columns: loop_columns } ) -}}
						{% for item in post.items %}
							<li class="Loop w-md-800vw h-md-100 d-md-flex">

								<{{- item.project ? "a href=\"#{item.project.link}\"" | raw : 'div' | raw }}
									class="Thumbnail position-relative d-block {{ item.project.color ? '' : 'background-color-gray-very-light-01' }}"
									style="{{ item.project.color ? 'background-color: ' ~ item.project.color | raw : '' }}"
									data-product-content="link"
								>
									{{-
										include(
											'partials/image.html.twig',
											{
												classes: [
													'Thumbnail__image',
													'z-index-1',
													'is-active',
													'object-fit-cover',
													'w-100',
													'h-100',
													item.mobile.image ? 'd-none d-md-block' : 'd-block'
												],
												image: item.image,
												attributes: { 'data-product-content': 'image' },
												size: 'size-600'
											}
										)
									-}}
									{{-
										include(
											'partials/image.html.twig',
											{
												classes: [
													'Thumbnail__image',
													'z-index-1',
													'is-active',
													'object-fit-cover',
													'd-md-none',
													'w-100',
													'h-100',
												],
												image: item.mobile.image,
												attributes: { 'data-product-content': 'image' },
												size: 'size-600'
											}
										)
									-}}
									{{-
										include(
											'partials/image.html.twig',
											{
												classes: [
													'Thumbnail__overview',
													'position-absolute',
													'inset-0',
													'object-position-center',
													'object-fit-cover',
													'z-index-2',
													'is-active',
													'w-100',
													'h-100',
													item.mobile.overview ? 'd-none d-md-block' : 'd-block'
												],
												image: item.image_hover,
												attributes: { 'data-product-content': 'image' },
												size: 'size-600'
											}
										)
									-}}
									{{-
										include(
											'partials/image.html.twig',
											{
												classes: [
													'Thumbnail__overview',
													'd-md-none',
													'position-absolute',
													'inset-0',
													'object-position-center',
													'object-fit-cover',
													'z-index-2',
													'is-active',
													'w-100',
													'h-100',
												],
												image: item.mobile.overview,
												attributes: { 'data-product-content': 'image' },
												size: 'size-600'
											}
										)
									-}}
								</{{-  item.project ? 'a' : 'div' -}}>

								{% if item.project %}
									<header class="Loop__header d-md-flex flex-md-row justify-content-md-between m-md-0 m-20px h-md-100">
											<h3 class="{{ fn( 'apply_filters', 'woocommerce_product_loop_title_classes', 'Loop__product-title', 'fw-normal', 'fst-italic', 'woocommerce-loop-product__title' ) }}">
												{{- item.project.title -}}
											</h3>
									</header>
								{% endif %}

							</li>
						{% endfor %}
					{{- include( 'woocommerce/loop/loop-end.html.twig' ) -}}
				</div>
			{% endif %}

			<div class="Wysiwyg d-md-none mt-20px">
				{{- post.content -}}
			</div>

			{% if post.meta( 'link' ).url %}
				{%
					include 'components/heading.html.twig'
					with {
						classes: [ 'color-gray-dark', 'background-color-white' ],
						link: post.meta( 'link' ).url,
						title: post.meta( 'link' ).title
					}
					only
				%}
			{% endif %}

			{% include 'components/footer-horizontal.html.twig' %}

		</div>
	</div>
{% endblock %}
