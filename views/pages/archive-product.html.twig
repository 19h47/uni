{% extends 'index.html.twig' %}

{% block content %}

	<div class="Horizontal-page__section">
		<div class="Horizontal-page__track js-track">

			<div class="Horizontal-page__wrapper">

				<header class="Archive-product__header woocommerce-products-header">
					<div class="Page__content__title woocommerce-products-header__title page-title">
						{% if show_page_title %}
							<h1>
								{%- if post.get_field( 'number' ) -%}
									<span>{{- __( 'Collection NÂ°', 'uni' ) -}}{{- post.get_field( 'number' ) -}}</span>
								{%- endif -%}
								{{- post.title -}}
							</h1>
						{% endif %}
					</div>

					<div class="Wysiwyg">{{- post.get_field( 'long_description' ) ? post.get_field( 'long_description' ) : post.content -}}</div>

					{% if post.description %}
						<div class="Page__content__footer">
							{#
								Hook: woocommerce_archive_description.

								@hooked woocommerce_taxonomy_archive_description - 10
								@hooked woocommerce_product_archive_description - 10
							#}
							{%- do action( 'woocommerce_archive_description' ) -%}
						</div>
					{% endif %}

				</header>

				{% if product_loop %}

					{#
						Hook: woocommerce_before_shop_loop.

						@hooked woocommerce_output_all_notices - 10
					#}
					{% do action( 'woocommerce_before_shop_loop' ) %}

					{{- fn( 'woocommerce_product_loop_start', false ) -}}

					{% for product in products %}
						{#
							Hook: woocommerce_shop_loop.
						#}
						{% do action( 'woocommerce_shop_loop' ) %}

						{% include 'partials/product-content.html.twig' %}
					{% endfor %}

					{{- fn( 'woocommerce_product_loop_end', false ) -}}

					{#
						Hook: woocommerce_after_shop_loop.

						@hooked woocommerce_pagination - 10
					#}
					{% do action( 'woocommerce_after_shop_loop' ) %}
				{% else %}
					{#
						Hook: woocommerce_no_products_found.

						@hooked wc_no_products_found - 10
					#}
					{% do action( 'woocommerce_no_products_found' ) %}
				{% endif %}

			</div>


			{% include 'components/footer.html.twig' %}

		</div>
	</div>

{% endblock  %}
