{#
 # Modal
 #
 # @package UNI
 #}

{% set size = size | default( 'full' ) %}

{% if 'full' == size %}
	{% set size = [ 'size-100', 'justify-content-center' ] %}
{% endif %}

{% if 'small' == size %}
	{% set size = [ 'w-md-80', 'h-100', 'h-md-90' ] %}
{% endif %}

<div
	id="modal-{{ id | e }}"
	class="transition-opacity-visibility mt-100px mx-20px mb-20px mt-md-20px ms-md-100px z-index-3 position-fixed inset-0 d-flex align-items-center justify-content-center"
	data-module-modal
	{{ attributes ? attributes | map( ( value, key ) => "#{key}=\"#{value}\"" ) | join( ' ' ) | raw }}
>
	<div
		class="{{ [
			'shadow-uni',
			'rounded-5px',
			'px-20px',
			'px-md-400vw',
			'w-100',
			'd-flex',
			'flex-column',
			'position-relative',
			'overflow-auto',
			'bg-white',
		] | merge( size ) | join( ' ' ) | trim }}"
	>
		<button
			class="size-16px mt-20px me-20px position-absolute top-0 end-0 d-flex"
			type="button"
			aria-label="{{ __( 'Close', 'uni' ) }}"
			data-modal="close"
		>
			{{- include( 'svg/use.html.twig', { icon: 'times', classes: [ 'size-100', 'pe-none' ] }, with_context = false ) -}}
		</button>
		{% block body %}{% endblock %}
	</div>
</div>
