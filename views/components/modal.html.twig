{#
 # Modal
 #
 # @package UNI
 #}

{% set size = size | default( 'full' ) %}

{% if 'full' == size %}
	{% set size = [ 'w-100', 'h-100', 'justify-content-center' ] %}
{% endif %}

{% if 'small' == size %}
	{% set size = [ 'w-80', 'h-90' ] %}
{% endif %}

<div
	id="modal-{{ id | e }}"
	class="Modal z-index-3 position-fixed inset-0 d-flex align-items-center justify-content-center"
	data-module-modal
>
	<div
		class="{{ [
			'Modal__wrapper',
			'w-100',
			'h-100',
			'd-flex',
			'flex-column',
			'position-relative',
			'overflow-auto',
		] | merge( size ) | join( ' ' ) | trim }}"
	>
		<button
			class="Modal__close position-absolute top-0 end-0 d-flex"
			type="button"
			aria-label="{{ __( 'Close', 'uni' ) }}"
			data-modal="close"
		>
			{{- include( 'svg/use.html.twig', { icon: 'times', classes: [ 'pe-none' ] }, with_context = false ) -}}
		</button>
		{% block body %}{% endblock %}
	</div>
</div>
