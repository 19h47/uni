{#
 # Footer Horizontal
 #
 # @package UNI
 #}

{% import 'macros/footer.twig' as footer %}

<footer class="Site-footer-horizontal my-md-20px text-gray-very-dark bg-white {{ classes ? classes | join( ' ' ) }}">
	<div class="{{
		[
			'me-md-20px',
			'shadow-uni',
			'rounded-5px',
			'p-20px',
			'px-md-200vw',
			'py-md-60vh',
			'w-md-1000vw',
			'd-md-flex',
			'flex-md-column',
			'h-md-100'
		] | join( ' ' )
	}}">
		<div class="row">
			<div class="col-7">
				{{- footer.list( menus.footer_primary.items, __( 'Navigation', 'uni' ) ) -}}
			</div>
			<div class="col-7">
				{{- footer.list( menus.footer_secondary.items, __( 'Information', 'uni' ) ) -}}
			</div>
		</div>
		<div class="row mt-20px mt-md-40px">
			<div>
				{{- footer.list( menus.footer_tertiary.items, __( 'Downloads', 'uni' ) ) -}}
			</div>
		</div>
		<div class="row pt-md-40px mt-20px mt-md-auto">
			<div>
				{{- include( 'partials/socials.html.twig', { label: __( 'Follow us', 'uni' ) } ) -}}
			</div>
		</div>
		<div class="row mt-20px mt-md-40px">
			<div>
				{{- include(
					'partials/signup-form.html.twig',
					{ label: __( 'Newsletter subscriptions', 'uni' ), id: post.id },
					with_context = false
				) -}}
			</div>
		</div>
		<div class="row mt-20px mt-md-40px">
			<div>
				<ul class="list-style-type-none">
					<li class="mb-12px">
						<h5 class="ff-body my-0 fs-2xs">{{- __( 'Credits:', 'uni' ) -}}</h5>
					</li>
					<li class="fs-3xs">
						<a class="d-inline-block ff-title text-decoration-underline-hover text-decoration-underline-focus" href="http://www.atelierinconnu.com/" target="_blank" rel="noopener noreferer">
							Atelier Inconnu
							</a>&nbsp;&nbsp;&#x002D;&nbsp;&nbsp;<a class="text-decoration-underline-hover text-decoration-underline-focus" href="https://19h47.fr" target="_blank" rel="noopener noreferer">19h47</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</footer>
