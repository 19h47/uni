{#
 # Footer Horizontal
 #
 # @package UNI
 #}

{% import 'macros/footer.twig' as footer %}

<footer class="Site-footer-horizontal mt-20px mb-20px color-gray-very-dark background-color-white">
	<div class="Site-footer-horizontal__grid py-md-60vh d-grid ps-md-0 h-md-100 mh-md-100">
		<div>
			{{- footer.list( menus.footer_primary.items, __( 'Navigation', 'uni' ) ) -}}
		</div>
		<div>
			{{- footer.list( menus.footer_secondary.items, __( 'Information', 'uni' ) ) -}}
		</div>
		<div>
			{{- footer.list( menus.footer_tertiary.items, __( 'Downloads', 'uni' ) ) -}}
		</div>
		<div>
			{{- include( 'partials/socials.html.twig', { label: __( 'Follow us', 'uni' ) } ) -}}
		</div>
		<div>{{- include( 'partials/signup-form.html.twig', { label: __( 'Newsletter subscriptions', 'uni' ), id: post.id }, with_context = false ) -}}</div>
		<div>
			<ul class="list-style-type-none">
				<li class="Site-footer__item">
					<h5 class="ff-body my-0">{{- __( 'Credits:', 'uni' ) -}}</h5>
				</li>
				<li class="Site-footer__item">
					<a class="d-inline-block ff-title" href="http://www.atelierinconnu.com/" target="_blank" rel="noopener noreferer">
						Atelier Inconnu
						</a>&nbsp;&nbsp;&#x002D;&nbsp;&nbsp;<a href="https://19h47.fr" target="_blank" rel="noopener noreferer">19h47</a>
				</li>
			</ul>
		</div>
	</div>
</footer>
