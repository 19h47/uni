{#
 # Heading
 #
 # @package UNI
 #}

<div
	class="{{ [
		'relative',
		'md-flex',
		'align-items-md-center',
		'justify-content-md-center',
		'z-2',
		'text-xl',
		'text-md-2xl'
	] | merge( classes | default( [] ) ) | join( ' ' ) | trim }}"
>
	<h2 class="{{
		[
			'writing-mode-md-vertical-rl',
			'origin-md-center',
			'rotate-md-180',
			'mx-md-200vw',
			'my-20px',
			'my-md-0',
			'text-center',
			'text-uppercase',
			'tracking-widest'
		] | join( ' ' )
	}}">
		{{- link ? "<a href=\"#{ link }\">" | raw -}}
			{{- title -}}
		{{- link ? '</a>' | raw -}}
	</h2>
</div>
