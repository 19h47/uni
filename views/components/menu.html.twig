{#
 # Menu
 #
 # @package UNI
 #}

{% embed 'components/panel.html.twig' with { id: 'menu' } %}
	{% block content %}
		<div class="p-20px d-flex flex-wrap px-md-400vw py-md-120vh h-100">

			<div class="w-100 w-md-8/12 mb-40px mb-md-0">
				<ul class="list-style-type-none" itemscope itemtype="http://schema.org/SiteNavigationElement">
					{% for item in menus.main_primary.items %}
						<li class="fs-xl fs-md-3xl {{ loop.first ? 'mb-20px mb-md-40px' : loop.last ? 'mt-20px mt-md-40px' : 'my-20px my-md-40px' }}">
							<a
								href="{{ item.url }}"
								class="h1 {{ item.current ? ' is-active' }}"
								itemprop="url"
								{{ item.target ? " target=\"#{item.target}\"" }}
							>
								{{- item.title -}}
							</a>
						</li>
					{% endfor %}
				</ul>
			</div>

			<div class="columns-2 column-gap-2.5 columns-md-auto column-gap-md-normal w-100 mb-20px mb-md-0 w-md-2/12">
				<ul class="list-style-type-none" itemscope itemtype="http://schema.org/SiteNavigationElement">
					{% for item in menus.main_secondary.items %}
						<li class="{{ loop.first and loop.last ? '' : ( loop.first ? 'mb-20px' : ( loop.last ? 'mt-20px' : 'my-20px' ) ) }}">
							<a
								href="{{ item.url }}"
								class="{{ item.current ? ' is-active' }}"
								itemprop="url"
								{{ item.target ? " target=\"#{item.target}\"" }}
							>
								{{- item.title -}}
							</a>
						</li>
					{% endfor %}
				</ul>
			</div>

			<div class="mt-auto w-100 d-md-flex">
				{{- include( 'partials/socials.html.twig', { classes: [ 'me-md-20px' ], label: __( 'Follow us', 'uni' ) } ) -}}
				{{- include( 'partials/signup-form.html.twig', { label: __( 'Newsletter subscriptions', 'uni' ), id: post.id, classes: [ 'mt-20px', 'mt-md-0', 'flex-fill' ] } ) -}}
			</div>

		</div>
	{% endblock %}
{% endembed %}
